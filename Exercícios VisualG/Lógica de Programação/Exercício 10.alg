algoritmo "semnome"
// Função :
// Autor :
// Data : 08/01/2020
// Seção de Declarações 
var

num, db: inteiro
op: caractere

inicio
// Seção de Comandos


repita
escreva("Digite um numero: ")
leia(num)

db <- num *2

escreval("O dobro do numero ",num, " e o numero ",db)
escreval()
escreva("Deseja repetir a operacao [S/N]: ")
leia(op)
limpatela
ate(op = "n")
 
fimalgoritmo
